<script type="text/javascript">     
var _pass;     
/**      *Check user name        */      
String.prototype.Trim = function() {      
return this.replace(/(^\s*)|(\s*$)/g, ""); }      //---------------------------------------------------------------------------     
 
		  /**      *check password    */      //---------------------------------------------------------------------------     
		  function check_pass(){      
		  var pass;       
		  pass = document.getElementById('pass').value;      
		  pass = pass.Trim();      
		  _pass = pass;      
		  if (pass == "") {        
		  document.getElementById('pass_error').innerHTML = "Password cannot be null"; 

      		} 
			else {         
				if (/^\w{6,20}$/.test(pass)) {          
					document.getElementById('pass_error').innerHTML = "";         	} 
				else {          
					document.getElementById('pass_error').innerHTML = "6 ~ 20 character【0-9】【a-z-A-Z】";         
				}             
			}      
		}     
		/**      *check Email     */      //---------------------------------------------------------------------------     
		function check_email(){      
			var email;       
			email = document.getElementById('email').value;      
			email = email.Trim();      
			if (email == "") {        
				document.getElementById('email_error').innerHTML = "Email";       
			} 
			else {         
				if (/^[\w-]+[\.]*[\w-]+[@][\w\-]{1,}([.]([\w\-]{1,})){1,3}$/.test(email)) {         
					document.getElementById('email_error').innerHTML = "";         
					} 
					else {          
						document.getElementById('email_error').innerHTML = "Email";         
						}             
					}      
				}         
/**      *check rpass     */      //---------------------------------------------------------------------------     
function check_rpass(){      
	var rpass;       
	rpass = document.getElementById('rpass').value;      
	rpass = rpass.Trim();      
	if (rpass == "") {        
		document.getElementById('rpass_error').innerHTML = "re-enter passwrd cannot be null";       
		}        
		else if (rpass != _pass) {        
			document.getElementById('rpass_error').innerHTML = "Password is different";       
			}      
		else {        
			document.getElementById('rpass_error').innerHTML = ""
 		}         
	}         
	//check phone:  
	function mobile(){    
		var mobile;   
		mobile = document.getElementById('mobile').value;      
		mobile = mobile.Trim();             
		if(mobile.length==0)         {   
			document.getElementById('iphone_error').innerHTML = "Please enter password";                    
			}              
			if(mobile.length!=10)         {   
			document.getElementById('iphone_error').innerHTML = "Please re-enter your phone number";                    
			}          
			else {        
				document.getElementById('iphone_error').innerHTML = ""       		}     
		} 
	function age(){
		var age;
		age = document.getElementById('age').value;
		age = age.Trim();
		if(age.length==0)
			document.getElementById('age_error').innerHTML = "Please enter your age";
		else
			document.getElementById('age_error').innerHTML = ""
	}
	function gender(){
		var gender;
		gender = document.getElementById('gender').value;
		gender = gender.Trim();
		if(gender.length==0)
			document.getElementById('gender_error').innerHTML = "Please enter your gender: Male or Female";
		else
			document.getElementById('gender_error').innerHTML = ""
	}
	function income(){
		var income;
		income = document.getElementById('income').value;
		income = income.Trim();
		if(income.length==0)
			document.getElementById('income_error').innerHTML = "Please enter your annual income";
		else
			document.getElementById('income_error').innerHTML = ""
	}
			                //---------------------------------------------------------------------------     
function regist(){       
	      
	var pass_error=document.getElementById('pass_error').innerHTML;    var rpass_error=document.getElementById('rpass_error').innerHTML;    var email_error=document.getElementById('email_error').innerHTML;    var iphone_error=document.getElementById('iphone_error').innerHTML;    
	var age_error=document.getElementById('age_error').innerHTML; 
	var gender_error=document.getElementById('gender_error').innerHTML;
	var income_error=document.getElementById('income_error').innerHTML;
	     
	var pass=document.getElementById('pass').value;      
	var rpass=document.getElementById('rpass').value;      
	var email=document.getElementById('email').value;   
	var mobile=document.getElementById('mobile').value;
	var age=document.getElementById('age').value;
	var gender=document.getElementById('gender').value;
	var income=document.getElementById('income').value;
	 if (( pass_error == "" && rpass_error == ""&& iphone_error == "" && email_error == ""&& age_error == ""&& gender_error == ""&& income_error == "")&&( pass != "" && rpass != "" && email != ""&& age!=""&& gender!=""&& income!="")) {       
	 alert ("Congratulation,you have successfully registed!");       
	 } 
	 else {         
	 	alert ("Soory but registration has failed. Please check the information you have entered.");               
	}                 
	} 
</script>  
